doctype html
html(lang="en_CA")
  head
    meta(charset="UTF-8")
    title Ludwig Demo

    != css('reset')
    != css('main')

    //- I'll include these scripts later.
      script(src=socketio)
      script(src=$)
      != js('main')

  body
